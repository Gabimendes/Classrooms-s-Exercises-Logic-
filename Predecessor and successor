#include <stdio.h>
#include <stdlib.h>

int main (){

  //Código feito em português
	//Leia um número inteiro e exiba anterior e o sucessor
	
	int numqlqr;
		printf("Digite seu numero:  ");
		scanf("%d", &numqlqr);
		printf("Seu numero: %d \n", numqlqr);
		printf("Seu antecedente: %d \n", numqlqr - 1);
		printf("Seu sucessor: %d", numqlqr + 1);
		
		return 0;

}
