#include <stdio.h>
#include <stdlib.h>

int main (){
  
 	//Código feito em português
	//Leia um número inteiro e verifique se é par ou ímpar
	
	int numqlqr;
		printf("Digite seu numero:  ");
		scanf("%d", &numqlqr);
		printf("Seu numero: %d \n", numqlqr);
		
	if(numqlqr/2==0) {
		printf("par");
	}
		else{
			printf("impar");
		}
	
		return 0;


}
